<section id="content" role="main" class="group ancillary section-page">
  <header>
    <h1>Sections</h1>
  </header>

  <div class="sections-list">
    <ul>
      <% @results.each do |section| %>
        <li>
          <a href="<%= section.path %>"><%=h section.name %></a>
        </li>
      <% end %>
    </ul>
  </div>
</section>